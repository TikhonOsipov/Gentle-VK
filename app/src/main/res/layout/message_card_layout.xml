<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/message_card_relative_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/messages_image_view"
            android:layout_marginBottom="0dp"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/message_body_text_view"
            android:layout_below="@+id/messages_image_view"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="This is a long-long news body that I've just created"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--include layout="@layout/audio_include"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/message_body_text_view"/-->


    </RelativeLayout>
</android.support.v7.widget.CardView>